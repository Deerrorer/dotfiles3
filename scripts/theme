#!/usr/bin/env bash

# rofi theme
DIR="$HOME/.config/rofi/compact_without_icons.rasi"

get_options_theme() {
  echo "blue"
  echo "dark"
}

get_options_theme_polybar() {
  echo "polybar-square"
  echo "polybar-rounded"
}

main() {

  # Get THEME from rofi
  THEME=$( (get_options_theme) | rofi -dmenu -i -fuzzy -p "" -theme "$DIR")

  # If user has not picked anything, exit
  if [[ -z "${THEME// /}" ]]; then
    exit 1
  fi

  cp -f $HOME/dotfiles3/themes/$THEME/kitty/kitty.conf ~/.config/kitty/
  cp -f $HOME/dotfiles3/themes/$THEME/rofi/* ~/.config/rofi/
  cp -f $HOME/dotfiles3/themes/$THEME/vsc/* ~/.config/Code\ -\ OSS/User
  cp -f $HOME/dotfiles3/themes/$THEME/vsc/* ~/.config/Code/User
  cp -f $HOME/dotfiles3/themes/$THEME/polybar/* ~/.config/polybar
  cp -f $HOME/dotfiles3/themes/$THEME/i3/* ~/.config/i3

  THEME_POLYBAR=$( (get_options_theme_polybar) | rofi -dmenu -i -fuzzy -p "" -theme "$DIR")

    # If user has not picked anything, exit
  if [[ -z "${THEME_POLYBAR// /}" ]]; then
    exit 1
  fi
  cp -f $HOME/dotfiles3/themes/$THEME_POLYBAR/launch.sh ~/.config/polybar

  # done
  set -e

  i3-msg restart
}

main &

exit 0
